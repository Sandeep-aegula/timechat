{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://your-backend-url.vercel.app/api/$1" },
    { "source": "/socket.io/(.*)", "destination": "https://your-backend-url.vercel.app/socket.io/$1" },
    { "source": "/uploads/(.*)", "destination": "https://your-backend-url.vercel.app/uploads/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}